{
    "name": "Fortnite Tracker Extension",
    "description": "Extensão para consultar estatísticas do jogador",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "activeTab", "scripting"
    ],
    "host_permissions": [
        "https://api.fortnitetracker.com/*",
        "http://api.fortnitetracker.com/*"
    ],
    "icons": {
        "16": "/images/16x16.png",
        "32": "/images/32x32.png",
        "48": "/images/48x48.png",
        "128": "/images/128x128.png"
    },
    "action": {
        "default_popup": "index.html"
    }
}